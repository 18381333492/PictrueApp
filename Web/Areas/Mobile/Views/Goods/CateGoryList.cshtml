@{
    ViewBag.Title = "频道";
    Layout = "~/Areas/Mobile/Views/Shared/_Layout.cshtml";
}
using System.Collections.Generic;
@model  List<Dictionary<string,object>>
<link href="~/Areas/Mobile/Content/css/style4.css" rel="stylesheet" />
<div class="top-blank" style="height:3rem"></div>
    @foreach (var m in Model)
    {
    <div class="img_box" style="background:url(@(m["sPath"].ToString())) no-repeat center;  background-size: cover;">
        <div style="padding: 3.5rem 0">
            <div class="img_box_content">
                <hr style="left: 0">
                <span class="content_title">@m["GoodsCatetoryName"].ToString()</span>
                <hr style="right: 0rem">
                @if (m["iCount"].ToString() == "0")
                {
                    <p class="click_number">未更新</p>
                }
                else
                {
                <p class="click_number">更新@(m["iCount"])部</p>
                }
            </div>
        </div>
    </div>   
    }
<div class="ft-blank"></div>
<script type="text/javascript">
    $(function () {
        $('.tab a').eq(1).addClass("active").siblings().removeClass('active');
    });
</script>