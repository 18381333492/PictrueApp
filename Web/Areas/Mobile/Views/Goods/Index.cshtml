<script src="~/Scripts/plug-in/SlideSlidePages.js"></script>
 <script type="text/javascript">
     $(function () {
         $('.tab a').eq(2).addClass("active").siblings().removeClass('active');
         domin.InitGodos();
     });

     var domin = (function (obj) { return obj; }(new function () {

         var name = ["高清","无码","超清","蓝光","限制级","诱惑"];


         //初始化商品列表
         function InitGodos() {
                //滑动加载
             $.SlidePages({
                 url: '/Mobile/Goods/List',
                 sort:'dInsertTime',
                 callback: function (res) {
                     var html = [];
                     $(res.rows).each(function () {
                         var order = parseInt(this.dInsertTime.substring(this.dInsertTime.length - 1));
                         if (order > 5) {
                             order = 10 - order;
                         }
                         html.push('<li>');
                         html.push('<div class="probox">');
                         html.push('<div class="img" style="position:relative"><a href="/Mobile/Goods/Detail?ID=' + this.ID + '"><img src="' + this.sPicturePath + '" />');
                         html.push('<img src="/Areas/Mobile/Content/img/ds.ico" style="position:absolute; top: 50%; left: 50%; margin-left: -15px; margin-top: -15px;height:30px;width:30px;" />')
                         html.push('<div style="position:absolute;width:auto;height:20px;right:0;top:0;text-align:right;background-color:red;color:white">'+name[order]+'</div></a></div>')
                         html.push('<div class="tab txt-center">');
                         html.push('<div class="font1_6" style="font-size:1.4rem;margin-top:5px;overflow:hidden">' + this.sGoodsName + '</div>');
                         html.push('<div class="font1_6 red"></div>');
                         html.push('</div>');
                         html.push('</div>');
                         html.push('</li>');
                     });
                    $('#GoodsList').append(html.join(''));
                 }
             });
         }

         return {
             InitGodos:InitGodos
         }
     }));
 </script>

