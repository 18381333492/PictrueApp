@{
    ViewBag.Title = "首页";
    Layout = "~/Areas/Mobile/Views/Shared/_Layout.cshtml";
}
 <style>
        .swiper-container {
            width: 100%;
            top: 4rem;
            bottom: 6rem;
            left: 0;
            right: 0;
            box-sizing: border-box;
            position: absolute;
            z-index: 10;
        }

        .swiper-slide {
            background-position: center;
            background-size: cover;
            margin: 0 5%;
            width: 70%;
            background-color: transparent;
        }
    </style>
@using EFModel;
@model List<Goods>
    <!-- Swiper -->
    <!--<div class="fbh-tit" style="margin-top:40px;"><span>发布会</span><img src="images/fbh-tit-line.png" /></div>-->
    <div class="swiper-container" style="margin-top:10px;">
        <div class="swiper-wrapper">
            @foreach (var m in Model) {
            <div class="swiper-slide egc-fabuhui-list" style="background-image:url(@m.sPicturePath);">
            <a href="/Mobile/Goods/Detail?ID=@m.ID"></a>
            </div>
            }
        </div>
    </div>
    <div class="fbh-yy"><img src="/Areas/Mobile/Content/images/fbh-yy.png" /></div>
    <div class="ft-blank"></div>
<script>
    $(function () {
        var page_wt = $(".egc-fabuhui-list").width();
        var swiper = new Swiper('.swiper-container', {
            pagination: '.swiper-pagination',
            effect: 'coverflow',
            grabCursor: true,
            centeredSlides: true,
            slidesPerView: 'auto',
            coverflow: {
                rotate: 0,
                stretch: 0,
                depth: 100,
                modifier: 1,
                slideShadows: true
            }
        });
    });
</script>
