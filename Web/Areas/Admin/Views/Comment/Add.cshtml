

<form id="add_form">
<table class="gridtable">
    <tr>
        <td>评论人名称</td>
        <td>
            <input name="sCommentName" type="text" class="easyui-textbox"  data-options="min:0" />
        </td>
    </tr>
    <tr>
        <td>头像(可不传)</td>
        <td>
            <div id="sCommentHeadPic" style="border-radius:50%;border:1px solid #ccc;width:80px;height:80px;overflow:hidden;"></div>
            <input type="hidden" name="sCommentHeadPic" />
        </td>
    </tr>
    <tr>
        <td>赞数量</td>
        <td>
            <input name="iCommentCount" type="text" class="easyui-numberbox" data-options="min:0"/>
        </td>
    </tr>
    <tr>
        <td>评论内容</td>
        <td>
           <textarea name="sContens" style="width:280px;height:80px;line-height:20px;"></textarea>
        </td>
    </tr>
</table>
</form>
